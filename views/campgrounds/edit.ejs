<% layout('layouts/BoilerPlate.ejs') %>

<div class="row">
  <h1 class='text-center'>Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
    action="/campgrounds/<%= editCampground._id %>?_method=PATCH"
    method="POST" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="title">Title</label>
    <input class="form-control" type="text" name="campground[title]" id="title" value="<%= editCampground.title %>" required/>
  </div>
    <div class="mb-3">
    <label class="form-label" for="location">Location</label>
    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= editCampground.location %>" required/>
  </div>
  <div class="mb-3">
    <label class="form-label" for="image">Image Url</label>
    <input class="form-control" type="text" name="campground[image]" id="image" value="<%= editCampground.image %>" required/>
  </div>
  <div class="mb-3">
    <label class="form-label" for="price">Campground Price</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="price-label">$</span>
      </div>
      <input type="text" class="form-control" id="price" placeholder="0" aria-label="Username" aria-describedby="price-label" name="campground[price]" value="<%= editCampground.price %>" required>
    </div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= editCampground.description %></textarea>
  </div>
  <div class="mb-3">
    <button class="btn btn-info" type="submit">Update Campground</button>
  </div>
</form>
<a href="/Campgrounds/<%= editCampground._id %>">Back to campground</a>
  </div>
</div>


